<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:inputType="text"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:maxLength="50"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@id/textName"
        app:layout_constraintBottom_toBottomOf="@id/textName"
        app:layout_constraintLeft_toRightOf="@id/textName"
        />

    <TextView
        android:id="@+id/textHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@id/textName"
        app:layout_constraintTop_toBottomOf="@id/textName"
        />

    <EditText
        android:id="@+id/editTextHeight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLength="3"
        android:maxLines="1"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/textHeight"
        app:layout_constraintBottom_toBottomOf="@id/textHeight"
        app:layout_constraintLeft_toLeftOf="@id/editTextName"
        />

    <TextView
        android:id="@+id/textWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textHeight"
        app:layout_constraintTop_toBottomOf="@+id/textHeight"
        />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="@id/textWeight"
        app:layout_constraintBottom_toBottomOf="@id/textWeight"
        app:layout_constraintLeft_toLeftOf="@id/editTextName"
        />

    <TextView
        android:id="@+id/textAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textWeight"
        app:layout_constraintTop_toBottomOf="@+id/textWeight"
        />

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLength="3"
        android:maxLines="1"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/textAge"
        app:layout_constraintBottom_toBottomOf="@id/textAge"
        app:layout_constraintLeft_toLeftOf="@id/editTextName"
        />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="calculate"
        app:layout_constraintTop_toBottomOf="@id/textError"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/textError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text=""
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@+id/editTextAge"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/imageViewItis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@id/buttonCalculate"
        app:layout_constraintRight_toRightOf="@id/buttonCalculate"
        app:srcCompat="@drawable/itis"
        app:layout_constraintTop_toBottomOf="@id/buttonCalculate"
         />

</androidx.constraintlayout.widget.ConstraintLayout>